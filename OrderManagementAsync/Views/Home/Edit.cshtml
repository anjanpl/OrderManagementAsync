@model SupplierEditViewModel

@{
    ViewBag.Title = "Edit Supplier";    
}

<style>
  .required:after {
    content:" *";
    color: red;
  }
</style>

<form enctype="multipart/form-data" asp-controller="home" asp-action="edit"
      method="post" class="mt-3">
    <input hidden asp-for="Id" />    
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label required"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="AddresslineOne" class="col-sm-2 col-form-label required"></label>
        <div class="col-sm-10">
            <input asp-for="AddresslineOne" class="form-control" placeholder="Address Line 1">
            <span asp-validation-for="AddresslineOne" class="text-danger"></span>
        </div>
    </div>
     <div class="form-group row">
        <label asp-for="AddresslineTwo" class="col-sm-2 col-form-label required"></label>
        <div class="col-sm-10">
            <input asp-for="AddresslineTwo" class="form-control" placeholder="Address Line 2">
            <span asp-validation-for="AddresslineTwo" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="City" class="col-sm-2 col-form-label required"></label>
        <div class="col-sm-10">
            <input asp-for="City" class="form-control" placeholder="City">
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
     <div class="form-group row">
        <label asp-for="PostalCode" class="col-sm-2 col-form-label required"></label>
        <div class="col-sm-10">
            <input asp-for="PostalCode" class="form-control" placeholder="Postal Code">
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="State" class="col-sm-2 col-form-label required"></label>
        <div class="col-sm-10">
            <select asp-for="State" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<StateList>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
    </div>
  
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="home" asp-action="index"
               class="btn btn-primary">Cancel</a>
        </div>
    </div>

    @section Scripts {
       
    }
</form>